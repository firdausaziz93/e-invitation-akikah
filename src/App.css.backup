/* ============================================
   BASIC RESET & VARIABLES
   ============================================ */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  /* Color Palette - Islamik & Elegant */
  --primary-green: #2d6a4f;
  --light-green: #52b788;
  --cream: #fff8e7;
  --beige: #f5e6d3;
  --gold: #d4af37;
  --dark-brown: #3e2723;
  --white: #ffffff;
  --text-dark: #2c2c2c;
  --text-light: #666666;
  
  /* Typography */
  --font-arabic: 'Amiri', serif;
  --font-body: 'Poppins', sans-serif;
  
  /* Spacing */
  --spacing-xs: 0.5rem;
  --spacing-sm: 1rem;
  --spacing-md: 1.5rem;
  --spacing-lg: 2rem;
  --spacing-xl: 3rem;
  
  /* Border Radius */
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 20px;
  
  /* Shadows */
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.12);
  --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.15);
}

body {
  font-family: var(--font-body);
  color: var(--text-dark);
  line-height: 1.7;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}


/* ============================================
   MAIN APP LAYOUT
   ============================================ */
.app {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--cream) 0%, var(--beige) 100%);
  position: relative;
  overflow-x: hidden;
}

/* Background Pattern - Corak Geometri Islamik */
.background-pattern {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.03;
  z-index: 0;
  background-image: 
    repeating-linear-gradient(45deg, var(--primary-green) 0px, var(--primary-green) 2px, transparent 2px, transparent 10px),
    repeating-linear-gradient(-45deg, var(--primary-green) 0px, var(--primary-green) 2px, transparent 2px, transparent 10px);
  pointer-events: none;
}

.container {
  position: relative;
  z-index: 1;
  max-width: 800px;
  margin: 0 auto;
  padding: var(--spacing-md);
}


/* ============================================
   ANIMATION - FADE IN
   ============================================ */
.fade-in {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

.fade-in.visible {
  opacity: 1;
  transform: translateY(0);
}


/* ============================================
   HEADER SECTION - Pembukaan
   ============================================ */
.header {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl) var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  text-align: center;
  border-top: 4px solid var(--gold);
}

.bismillah {
  margin-bottom: var(--spacing-lg);
}

.bismillah .arabic {
  font-family: var(--font-arabic);
  font-size: 1.8rem;
  color: var(--primary-green);
  font-weight: 700;
  margin-bottom: var(--spacing-xs);
  line-height: 1.8;
}

.bismillah .translation {
  font-size: 0.9rem;
  color: var(--text-light);
  font-style: italic;
}

.divider {
  width: 80px;
  height: 3px;
  background: linear-gradient(to right, transparent, var(--gold), transparent);
  margin: var(--spacing-md) auto;
}

.main-title {
  font-size: 2.2rem;
  color: var(--primary-green);
  font-weight: 600;
  margin-bottom: var(--spacing-md);
  letter-spacing: 1px;
}

.welcome-text {
  color: var(--text-dark);
  font-size: 1rem;
  line-height: 1.8;
}

.welcome-text p {
  margin-bottom: var(--spacing-sm);
}

.welcome-text em {
  color: var(--primary-green);
  font-weight: 500;
}


/* ============================================
   CHILDREN SECTION - Nama Anak-anak
   ============================================ */
.children-section {
  margin-bottom: var(--spacing-lg);
}

.section-title {
  text-align: center;
  font-size: 1.8rem;
  color: var(--primary-green);
  margin-bottom: var(--spacing-md);
  font-weight: 600;
}

.children-cards {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--spacing-md);
}

.child-card {
  background: var(--white);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  text-align: center;
  box-shadow: var(--shadow-sm);
  border-left: 4px solid var(--light-green);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.child-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
}

.child-name {
  font-size: 1.8rem;
  color: var(--primary-green);
  font-weight: 700;
  margin-bottom: var(--spacing-xs);
  font-family: var(--font-arabic);
}

.child-parents {
  font-size: 1rem;
  color: var(--text-light);
  font-style: italic;
}


/* ============================================
   EVENT DETAILS SECTION - Maklumat Majlis
   ============================================ */
.event-details {
  background: var(--white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl) var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-md);
}

.details-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.detail-item {
  text-align: center;
  padding: var(--spacing-md);
  background: var(--cream);
  border-radius: var(--radius-sm);
  border: 2px solid var(--beige);
}

.detail-icon {
  font-size: 2rem;
  margin-bottom: var(--spacing-xs);
}

.detail-label {
  font-size: 0.9rem;
  color: var(--text-light);
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: var(--spacing-xs);
  font-weight: 600;
}

.detail-value {
  font-size: 1rem;
  color: var(--text-dark);
  font-weight: 500;
  line-height: 1.6;
}

.program {
  margin-top: var(--spacing-lg);
  padding-top: var(--spacing-lg);
  border-top: 2px dashed var(--beige);
}

.program-title {
  font-size: 1.3rem;
  color: var(--primary-green);
  margin-bottom: var(--spacing-md);
  text-align: center;
  font-weight: 600;
}

.program-list {
  list-style: none;
  padding: 0;
}

.program-list li {
  padding: var(--spacing-sm);
  margin-bottom: var(--spacing-xs);
  background: var(--cream);
  border-radius: var(--radius-sm);
  border-left: 3px solid var(--gold);
  font-size: 0.95rem;
  color: var(--text-dark);
}


/* ============================================
   CLOSING SECTION - Doa & Penutup
   ============================================ */
.closing-section {
  background: linear-gradient(135deg, var(--primary-green), var(--light-green));
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl) var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  color: var(--white);
}

.dua-box {
  background: rgba(255, 255, 255, 0.15);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.dua-arabic {
  font-family: var(--font-arabic);
  font-size: 1.5rem;
  text-align: center;
  margin-bottom: var(--spacing-sm);
  line-height: 2;
  color: var(--white);
}

.dua-translation {
  text-align: center;
  font-size: 0.95rem;
  font-style: italic;
  margin-bottom: var(--spacing-xs);
  line-height: 1.7;
}

.dua-reference {
  text-align: center;
  font-size: 0.85rem;
  opacity: 0.8;
}

.closing-text {
  text-align: center;
  margin-bottom: var(--spacing-lg);
  line-height: 1.8;
}

.closing-text p {
  margin-bottom: var(--spacing-sm);
}

.families {
  text-align: center;
  font-size: 1.1rem;
  line-height: 2;
}

.families p {
  margin-bottom: var(--spacing-xs);
}


/* ============================================
   SHARE SECTION - WhatsApp Button
   ============================================ */
.share-section {
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.whatsapp-button {
  background: linear-gradient(135deg, #25D366, #128C7E);
  color: var(--white);
  border: none;
  border-radius: 50px;
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: 1.1rem;
  font-weight: 600;
  font-family: var(--font-body);
  cursor: pointer;
  box-shadow: var(--shadow-md);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.whatsapp-button:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-lg);
}

.whatsapp-button:active {
  transform: translateY(0);
}

.whatsapp-icon {
  font-size: 1.5rem;
}


/* ============================================
   FOOTER
   ============================================ */
.footer {
  text-align: center;
  padding: var(--spacing-lg);
  color: var(--text-light);
}

.footer-text {
  font-size: 1rem;
  color: var(--primary-green);
  margin-bottom: var(--spacing-sm);
  font-weight: 500;
}

.footer-divider {
  width: 60px;
  height: 2px;
  background: var(--gold);
  margin: var(--spacing-sm) auto;
}

.footer-note {
  font-size: 0.9rem;
  color: var(--text-light);
  font-style: italic;
}


/* ============================================
   RESPONSIVE DESIGN - TABLET
   ============================================ */
@media (min-width: 600px) {
  .children-cards {
    grid-template-columns: 1fr;
  }
  
  .details-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .detail-item:last-child {
    grid-column: 1 / -1;
  }
  
  .main-title {
    font-size: 2.5rem;
  }
  
  .bismillah .arabic {
    font-size: 2rem;
  }
}


/* ============================================
   RESPONSIVE DESIGN - DESKTOP
   ============================================ */
@media (min-width: 900px) {
  .container {
    padding: var(--spacing-xl);
  }
  
  .header {
    padding: var(--spacing-xl) 3rem;
  }
  
  .children-cards {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .details-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .detail-item:last-child {
    grid-column: auto;
  }
  
  .main-title {
    font-size: 3rem;
  }
  
  .section-title {
    font-size: 2rem;
  }
  
  .child-name {
    font-size: 2rem;
  }
}


